<div class="container mt-3">
  <% if params[:query] %>
    <h2>You searched for <strong><%= params[:query] %></strong>. We found <%= @plant.count %> plants out of <%= Plant.count %>.</h2>
  <% else %>
    <h2>All <%= @plants.count %> plants.</h2>
  <% end %>
  <div class="cards">
    <% @plants.each do |plant| %>
      <div class="card-trip">
        <%= cl_image_tag plant.image.key %>
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to plant.name, plant_path(plant) %></h2>
            <p><%= plant.description%></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
